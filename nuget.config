<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="AjnaTellus" value="https://pkgs.dev.azure.com/AjnaTellus/_packaging/AjnaTellus/nuget/v3/index.json" />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

  <packageSourceMapping>
    <!-- All your internal Franz packages come ONLY from AjnaTellus -->
    <packageSource key="AjnaTellus">
      <package pattern="Franz.Common.*" />
    </packageSource>

    <!-- Everything else defaults to nuget.org -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
