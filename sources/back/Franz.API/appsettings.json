{
  "Logging": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Database": {
    "Provider": "sqlserver", // mariadb | oracle | postgres | sqlserver | mongo | cosmos
    "ServerName": "localhost",
    "DatabaseName": "FranzDB",
    "UserName": "sa",
    "Password": "YourStrong!Passw0rd",
    "Port": "1433",
    "SslMode": "Preferred"
  },

  "Databases": {
    "Relational": {
      "Provider": "sqlserver",
      "ServerName": "localhost",
      "DatabaseName": "FranzDB",
      "UserName": "sa",
      "Password": "YourStrong!Passw0rd",
      "Port": "1433"
    },
    "Document": {
      "Provider": "mongo",
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "FranzMongo"
    }
  },

  "Messaging": {
    "Provider": "kafka",
    "BootStrapServers": "localhost:9092",
    "GroupID": "franz-consumer-group",
    "TopicPrefix": "franz",
    "SslEnabled": false
  },

  "Resilience": {
    "RetryPolicy": {
      "Enabled": true,
      "RetryCount": 3,
      "RetryIntervalMilliseconds": 500
    },
    "CircuitBreaker": {
      "Enabled": true,
      "FailureThreshold": 0.5,
      "MinimumThroughput": 10,
      "DurationOfBreakSeconds": 30
    },
    "AdvancedCircuitBreaker": {
      "Enabled": true,
      "FailureThreshold": 0.5,
      "SamplingDurationSeconds": 30,
      "MinimumThroughput": 8,
      "DurationOfBreakSeconds": 15
    },
    "TimeoutPolicy": {
      "Enabled": true,
      "TimeoutSeconds": 5
    },
    "BulkheadPolicy": {
      "Enabled": true,
      "MaxParallelization": 10,
      "MaxQueueSize": 20
    }
  },

  "ExternalServices": {
    "Catalog": {
      "BaseUrl": "https://api.example.com/catalog",
      "Policy": "RetryPolicy"
    },
    "Payments": {
      "BaseUrl": "https://api.example.com/payments",
      "Policy": "CircuitBreaker"
    }
  },

  "Tracing": {
    "OpenTelemetry": {
      "Enabled": true,
      "SourceName": "Franz.Mediator",
      "Exporter": "jaeger", // jaeger | zipkin | otlp
      "Endpoint": "http://localhost:14268/api/traces"
    }
  },

  "Cors": {
    "Policies": {
      "AllowAll": {
        "Origins": [ "*" ],
        "Methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
        "Headers": [ "*" ]
      }
    }
  }
}
